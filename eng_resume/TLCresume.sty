\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{TLCresume}[2021/12/11 resume package]

% FONT SETTINGS
\RequirePackage[T1]{fontenc} % Font encoding
\RequirePackage{csquotes}
\RequirePackage{anyfontsize}
\RequirePackage[12pt]{moresize}

% MARGINS AND SPACING
\RequirePackage[margin=.9in, top=.2in]{geometry} % Set Margins
\raggedright  % Left align, no indent
\raggedbottom % Top align, no indent

% COLORS
\RequirePackage{xcolor}
\definecolor{highlight}{RGB}{105, 74, 138}

% HEADER AND FOOTER SETTINGS
\RequirePackage{fancyhdr} % For header and footer
\renewcommand{\headrulewidth}{0pt} % No header rule
\renewcommand{\footrulewidth}{0pt} % No footer rule

% HYPERLINK SETTINGS
\RequirePackage[hidelinks]{hyperref}
\hypersetup{
    colorlinks=true,
    urlcolor=highlight,
    linkcolor=blue,
    pdfpagemode=FullScreen,
}

% BULLET POINTS
\RequirePackage[inline]{enumitem}
\setlength{\tabcolsep}{0in}

% SECTION FORMATTING
\RequirePackage{titlesec}
\titlespacing*{\section}{0em}{0.5em}{0em}
\titleformat{\section}{
\vspace{0pt}\scshape\raggedright\large\bfseries
}{}{0em}{}[\color{black}\titlerule \vspace{0pt}]

% SUBSECTION FORMATTING
\titlespacing*{\subsection}{0em}{0em}{0em}
\titleformat{\subsection}{\bfseries}{}{0em}{}[]

% SUBFILES IMPORTING
\RequirePackage{standalone}
\RequirePackage{import}

% BABEL (Language settings)
\RequirePackage[english]{babel}

% PAGE NUMBERING
\pagenumbering{gobble}

% CUSTOM COMMANDS
\newcommand{\resumeItem}[1]{
  \item\small{
    {#1 \vspace{-2pt}}
  }
}

\newcommand{\classesList}[4]{
    \item\small{
        {#1 #2 #3 #4 \vspace{-2pt}}
  }
}

\newcommand{\resumeSubheading}[4]{
  \vspace{-2pt}\item
    \begin{tabular*}{1.0\textwidth}[t]{l@{\extracolsep{\fill}}r}
      \textbf{#1} & \textbf{\small #2} \\
      \textit{\small#3} & \textit{\small #4} \\
    \end{tabular*}\vspace{-7pt}
}

\newcommand{\resumeSubSubheading}[2]{
    \item
    \begin{tabular*}{0.97\textwidth}{l@{\extracolsep{\fill}}r}
      \textit{\small#1} & \textit{\small #2} \\
    \end{tabular*}\vspace{-7pt}
}

\newcommand{\resumeProjectHeading}[2]{
    \item
    \begin{tabular*}{1.001\textwidth}{l@{\extracolsep{\fill}}r}
      \small#1 & \textbf{\small #2}\\
    \end{tabular*}\vspace{-7pt}
}

\newcommand{\resumeSubItem}[1]{\resumeItem{#1}\vspace{-4pt}}

% BULLET POINTS CUSTOMIZATION
\renewcommand\labelitemi{$\vcenter{\hbox{\tiny$\bullet$}}$}
\renewcommand\labelitemii{$\vcenter{\hbox{\tiny$\bullet$}}$}

% ITEMIZE ENVIRONMENT FOR RESUME SECTIONS
\newcommand{\resumeSubHeadingListStart}{\begin{itemize}[leftmargin=0.0in, label={}]}
\newcommand{\resumeSubHeadingListEnd}{\end{itemize}}
\newcommand{\resumeItemListStart}{\begin{itemize}}
\newcommand{\resumeItemListEnd}{\end{itemize}\vspace{-5pt}}

% PDF METADATA AND CHARACTER SUPPORT
\pdfgentounicode=1
